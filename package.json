{
  "name": "btc-tracker",
  "version": "0.4.2",
  "description": "Bitcoin transaction tracker",
  "main": "src/electron-main.js",
  "electronMain": "src/electron-main.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:e2e": "jest tests/setup.test.js --forceExit --testTimeout=120000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "electron": "npx electron src/electron-main.js",
    "electron:headless": "npx electron src/electron-main.js --headless",
    "setup-node-binaries": "node setup-node-binaries.js",
    "electron:build": "electron-builder build --win --publish never",
    "electron:publish": "electron-builder build --win --publish always",
    "electron:dev": "npx electron-builder && npx electron dist/electron-main.js"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.2",
    "connect-flash": "^0.1.1",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.3",
    "express": "^4.18.2",
    "express-fileupload": "^1.5.1",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "unzipper": "^0.10.14",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^2.0.22",
    "puppeteer": "^24.6.1",
    "supertest": "^7.1.1"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/public/**",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  },
  "build": {
    "appId": "com.wilqq.btctracker",
    "productName": "BTC Tracker",
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json",
      "node_binaries/node-v22.14.0-win-x64.zip"
    ],
    "directories": {
      "buildResources": "src/public/images",
      "output": "dist"
    },
    "win": {
      "target": "nsis",
      "icon": "src/public/images/icon-512x512.png",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "artifactName": "${productName}-Setup-${version}.${ext}",
      "include": "installer.nsh"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wilqq-the/BTC-Tracker.git"
  }
}
