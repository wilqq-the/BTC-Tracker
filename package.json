{
  "name": "btc-tracker",
  "version": "1.0.0",
  "description": "Bitcoin transaction tracker",
  "main": "src/server.js",
  "electronMain": "src/electron-main.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest",
    "test:e2e": "jest tests/setup.test.js --forceExit --testTimeout=120000",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "electron": "npx electron src/electron-main.js",
    "electron:headless": "npx electron src/electron-main.js --headless",
    "electron:build": "npx electron-builder",
    "electron:dev": "npx electron-builder && npx electron dist/electron-main.js"
  },
  "dependencies": {
    "axios": "^1.6.7",
    "bcryptjs": "^3.0.2",
    "body-parser": "^1.20.2",
    "connect-flash": "^0.1.1",
    "cors": "^2.8.5",
    "csv-parse": "^5.5.3",
    "express": "^4.18.2",
    "express-fileupload": "^1.5.1",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.2",
    "passport": "^0.7.0",
    "passport-local": "^1.0.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^2.0.22",
    "puppeteer": "^24.6.1",
    "supertest": "^6.3.4"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/public/**",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
